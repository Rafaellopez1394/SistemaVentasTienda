@{
    ViewBag.Title = "Cartera de Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="fa fa-users"></i> Cartera de Clientes</h4>
                    <p class="mb-0">Análisis de antigüedad de saldos y clientes morosos</p>
                </div>
                <div class="card-body">
                    <!-- Filtros -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <label>Fecha de Corte:</label>
                            <input type="date" id="txtFechaCorte" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-4">
                            <label>&nbsp;</label><br />
                            <button type="button" class="btn btn-warning" onclick="cargarCartera()">
                                <i class="fa fa-search"></i> Consultar Cartera
                            </button>
                        </div>
                    </div>

                    <!-- Resumen -->
                    <div class="row mb-4" id="divResumen" style="display:none;">
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <h5>Cartera Total</h5>
                                    <h3 id="lblCarteraTotal">$0.00</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h5>Al Corriente</h5>
                                    <h3 id="lblAlCorriente">$0.00</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-dark">
                                <div class="card-body text-center">
                                    <h5>Vencido</h5>
                                    <h3 id="lblVencido">$0.00</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <h5>Morosos</h5>
                                    <h3 id="lblMorosos">0</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tabla -->
                    <div class="table-responsive">
                        <table id="tbCartera" class="table table-striped table-bordered table-hover" style="width:100%">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Cliente</th>
                                    <th>RFC</th>
                                    <th>Tipo Crédito</th>
                                    <th>Total Ventas</th>
                                    <th>Total Pagos</th>
                                    <th>Saldo Pendiente</th>
                                    <th>Vigente</th>
                                    <th>Vencido 30</th>
                                    <th>Vencido 60</th>
                                    <th>Vencido 90+</th>
                                    <th>Días Vencido</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var tabla;

        $(document).ready(function () {
            tabla = $('#tbCartera').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-MX.json"
                },
                "columns": [
                    { "data": "RazonSocial" },
                    { "data": "RFC" },
                    { "data": "TipoCredito" },
                    { "data": "TotalVentas", "render": function (data) { return "$" + parseFloat(data).toLocaleString('es-MX', { minimumFractionDigits: 2 }); } },
                    { "data": "TotalPagos", "render": function (data) { return "$" + parseFloat(data).toLocaleString('es-MX', { minimumFractionDigits: 2 }); } },
                    { 
                        "data": "SaldoPendiente", 
                        "render": function (data) { 
                            return "<strong style='color:blue;'>$" + parseFloat(data).toLocaleString('es-MX', { minimumFractionDigits: 2 }) + "</strong>"; 
                        } 
                    },
                    { "data": "Vigente", "render": function (data) { return "$" + parseFloat(data).toLocaleString('es-MX', { minimumFractionDigits: 2 }); } },
                    { "data": "Vencido30", "render": function (data) { return data > 0 ? "$" + parseFloat(data).toLocaleString('es-MX', { minimumFractionDigits: 2 }) : "-"; } },
                    { "data": "Vencido60", "render": function (data) { return data > 0 ? "$" + parseFloat(data).toLocaleString('es-MX', { minimumFractionDigits: 2 }) : "-"; } },
                    { "data": "Vencido90", "render": function (data) { return data > 0 ? "$" + parseFloat(data).toLocaleString('es-MX', { minimumFractionDigits: 2 }) : "-"; } },
                    { 
                        "data": "DiasVencido", 
                        "render": function (data) { 
                            if (data == 0) return "-";
                            var color = data <= 30 ? 'green' : (data <= 60 ? 'orange' : 'red');
                            return "<span style='color:" + color + ";font-weight:bold;'>" + data + "</span>"; 
                        } 
                    },
                    { 
                        "data": "Estado",
                        "render": function (data) {
                            var badge = '';
                            if (data == 'AL CORRIENTE') badge = 'badge-success';
                            else if (data == 'VENCIDO') badge = 'badge-warning';
                            else badge = 'badge-danger';
                            return "<span class='badge " + badge + "'>" + data + "</span>";
                        }
                    }
                ],
                "order": [[5, "desc"]], // Ordenar por saldo descendente
                "pageLength": 25
            });
        });

        function cargarCartera() {
            var fechaCorte = $('#txtFechaCorte').val();

            if (!fechaCorte) {
                alert('Por favor seleccione la fecha de corte');
                return;
            }

            $.ajax({
                url: '@Url.Action("ObtenerCarteraClientes", "ReporteAvanzado")',
                type: 'GET',
                data: { fechaCorte: fechaCorte },
                beforeSend: function () {
                    $.LoadingOverlay("show");
                },
                success: function (response) {
                    $.LoadingOverlay("hide");
                    if (response.success) {
                        tabla.clear();
                        tabla.rows.add(response.data);
                        tabla.draw();

                        // Calcular resumen
                        var carteraTotal = 0;
                        var alCorriente = 0;
                        var vencido = 0;
                        var morosos = 0;

                        response.data.forEach(function (item) {
                            carteraTotal += item.SaldoPendiente;
                            if (item.Estado == 'AL CORRIENTE') {
                                alCorriente += item.SaldoPendiente;
                            } else {
                                vencido += item.SaldoPendiente;
                                if (item.Estado == 'MOROSO') morosos++;
                            }
                        });

                        $('#lblCarteraTotal').text('$' + carteraTotal.toLocaleString('es-MX', { minimumFractionDigits: 2 }));
                        $('#lblAlCorriente').text('$' + alCorriente.toLocaleString('es-MX', { minimumFractionDigits: 2 }));
                        $('#lblVencido').text('$' + vencido.toLocaleString('es-MX', { minimumFractionDigits: 2 }));
                        $('#lblMorosos').text(morosos);

                        $('#divResumen').show();
                    } else {
                        alert('Error: ' + response.mensaje);
                    }
                },
                error: function (xhr) {
                    $.LoadingOverlay("hide");
                    alert('Error al cargar la cartera');
                }
            });
        }
    </script>
}
