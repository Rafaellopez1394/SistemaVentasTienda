    <style>
        /* Forzar estilos del sidebar - Océano Fresco */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 260px;
            background: linear-gradient(180deg, #ffffff 0%, #f0f9ff 100%) !important;
            color: #0f172a !important;
            z-index: 1000;
            overflow-y: auto;
            box-shadow: 4px 0 20px rgba(8, 145, 178, 0.12);
            border-right: 2px solid #e0f2fe;
        }

        .sidebar-header {
            padding: 1.25rem 1rem;
            background: linear-gradient(135deg, #0891b2 0%, #14b8a6 100%) !important;
            border-bottom: none !important;
            text-align: center;
            box-shadow: 0 4px 12px rgba(8, 145, 178, 0.2);
        }

        .sidebar-header .logo {
            max-width: 100px !important;
            height: auto;
            margin: 0 auto;
            display: block;
            filter: drop-shadow(0 2px 8px rgba(255, 255, 255, 0.3));
        }

        .sidebar-header h3 {
            color: #ffffff !important;
            font-size: 1.1rem;
            margin: 0.75rem 0 0 0;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .sidebar-nav {
            padding: 1rem 0;
            list-style: none;
            margin: 0;
        }

        .sidebar-nav-item {
            margin-bottom: 0.15rem;
        }

        .sidebar-nav-link {
            display: flex !important;
            align-items: center;
            padding: 0.875rem 1.25rem !important;
            color: #0f172a !important;
            text-decoration: none !important;
            transition: all 0.3s ease;
            position: relative;
            font-size: 0.95rem;
            border-radius: 0.5rem;
            margin: 0.25rem 0.75rem;
        }

        .sidebar-nav-link:hover {
            background: rgba(8, 145, 178, 0.1) !important;
            color: #0891b2 !important;
            text-decoration: none !important;
            transform: translateX(4px);
        }

        .sidebar-nav-link:hover::before {
            display: none;
        }

        .sidebar-nav-link.active {
            background: linear-gradient(135deg, #0891b2 0%, #14b8a6 100%) !important;
            color: #ffffff !important;
            font-weight: 600;
            box-shadow: 0 4px 12px rgba(8, 145, 178, 0.3);
        }

        .sidebar-nav-link.active::before {
            display: none;
        }

        .sidebar-nav-link i {
            font-size: 1.15rem;
            width: 28px;
            margin-right: 0.875rem;
            color: #0891b2;
            transition: all 0.2s ease;
        }

        .sidebar-nav-link.active i,
        .sidebar-nav-link:hover i {
            color: #ffffff;
            transform: scale(1.1);
        }

        .main-content {
            margin-left: 260px;
            padding: 2rem;
            min-height: 100vh;
            background: #f0f9ff;
        }

        .top-header {
            background: #ffffff;
            border-radius: 16px;
            padding: 1.5rem 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 20px rgba(8, 145, 178, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 2px solid #e0f2fe;
            position: relative;
            overflow: hidden;
        }

        .top-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, #0891b2 0%, #14b8a6 50%, #0891b2 100%);
            background-size: 200% 100%;
            animation: gradientShift 3s ease infinite;
        }

        @@keyframes gradientShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        .page-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #0f172a;
            margin: 0;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            background: linear-gradient(135deg, #0891b2 0%, #14b8a6 100%);
            color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.3rem;
            box-shadow: 0 4px 15px rgba(8, 145, 178, 0.3);
            border: 3px solid #ffffff;
        }

        .user-name {
            color: #0f172a;
            font-weight: 600;
            font-size: 0.95rem;
        }

        .btn-logout {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: #ffffff !important;
            border: none;
            padding: 0.625rem 1.25rem;
            border-radius: 8px;
            transition: all 0.3s;
            font-weight: 500;
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
            text-decoration: none !important;
        }

        .btn-logout:hover {
            background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
            color: #ffffff !important;
        }

        .btn-logout i {
            margin-right: 0.5rem;
        }

        .sidebar-dropdown {
            list-style: none;
            padding-left: 0;
            margin: 0;
            background: rgba(8, 145, 178, 0.05);
        }

        .sidebar-dropdown-item {
            padding-left: 3rem;
        }

        .sidebar-dropdown-item .sidebar-nav-link {
            padding: 0.75rem 1.25rem !important;
            font-size: 0.9rem;
        }

        .sidebar-dropdown-item .sidebar-nav-link i {
            font-size: 1rem;
            width: 24px;
        }

        /* Mejorar cards del dashboard */
        .dashboard-card,
        .stat-card {
            background: #ffffff;
            border-radius: 16px;
            padding: 1.75rem;
            box-shadow: 0 4px 20px rgba(8, 145, 178, 0.1);
            transition: all 0.3s ease;
            border: 2px solid #e0f2fe;
            position: relative;
            overflow: hidden;
        }

        .dashboard-card::before,
        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, #0891b2 0%, #14b8a6 100%);
        }

        .dashboard-card:hover,
        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(8, 145, 178, 0.2);
            border-color: #0891b2;
        }

        /* Mejorar scrollbar - Océano */
        .sidebar::-webkit-scrollbar {
            width: 8px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: #f0f9ff;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: #0891b2;
            border-radius: 4px;
        }

        .sidebar::-webkit-scrollbar-thumb:hover {
            background: #14b8a6;
        }

        body {
            font-family: 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
            background: #f0f9ff;
            color: #0f172a;
            font-size: 14px;
            line-height: 1.6;
            margin: 0;
            padding: 0;
        }

        * {
            box-sizing: border-box;
        }

        /* Botones de acción rápida */
        .btn-primary {
            background: linear-gradient(135deg, #f97316 0%, #fb923c 100%) !important;
            border: none !important;
            color: #ffffff !important;
            box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
            transition: all 0.3s;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(249, 115, 22, 0.4);
        }

        /* Mejorar badges */
        .badge {
            padding: 0.5rem 0.875rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.875rem;
        }

        /* Animaciones suaves */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .content-wrapper,
        .main-content > * {
            animation: fadeIn 0.5s ease-out;
        }
    </style>

    @RenderSection("estilos", required: false)
</head>

