    <script>
        $.extend({ MisUrls: { url: {}, urls: function (a) { $.extend($.MisUrls.url, a); } } });

        $.MisUrls.urls({
            _ObtenerClientes: '@Url.Action("Obtener", "Cliente")',
            _GuardarCliente: '@Url.Action("Guardar", "Cliente")',
            _EliminarCliente: '@Url.Action("Eliminar", "Cliente")',
            _ObtenerCatalogosCliente: '@Url.Action("ObtenerCatalogos", "Cliente")',
            _ObtenerProveedores: '@Url.Action("Obtener", "Proveedor")',
            _ObtenerSucursales: '@Url.Action("Obtener", "Sucursal")',
            _ObtenerProductosPorSucursal: '@Url.Action("ObtenerPorSucursal", "Producto")',
            _ObtenerProductos: '@Url.Action("Obtener", "Producto")',
            _GuardarCompra: '@Url.Action("RegistrarCompra", "Compra")',
            _ObtenerRoles: '@Url.Action("Obtener", "Rol")',
            _ObtenerUsuarios: '@Url.Action("Obtener", "Usuario")',
            _GuardarUsuario: '@Url.Action("Guardar", "Usuario")',
            _EliminarUsuario: '@Url.Action("Eliminar", "Usuario")',
            _ObtenerCategorias: '@Url.Action("Obtener", "Categoria")',
            _ObtenerCompras: '@Url.Action("Obtener", "Compra")',
            Url_datatable_spanish: '@Url.Content("~/Content/Plugins/datatables/js/datatable_spanish.json")'
        });

        // Sidebar toggle para móviles
        $(document).ready(function() {
            $('#sidebarToggle').on('click', function() {
                $('#sidebar').toggleClass('show');
            });

            // Cerrar sidebar al hacer clic fuera en móvil
            $(document).on('click', function(e) {
                if (!$(e.target).closest('#sidebar, #sidebarToggle').length) {
                    $('#sidebar').removeClass('show');
                }
            });

            // Cargar sucursales al iniciar
            cargarSucursales();
            
            // Verificar cambios de precio recientes
            verificarCambiosPrecios();
        });

        // Función para cargar sucursales en el selector
        function cargarSucursales() {
            $.ajax({
                url: '@Url.Action("Obtener", "Sucursal")',
                type: 'GET',
                success: function(response) {
                    const select = $('#ddlSucursalActiva');
                    select.empty();
                    
                    if (response.data && response.data.length > 0) {
                        $.each(response.data, function(i, sucursal) {
                            select.append($('<option>', {
                                value: sucursal.SucursalID,
                                text: sucursal.Nombre
                            }));
                        });
                        
                        // Obtener sucursal guardada en sesión
                        $.ajax({
                            url: '@Url.Action("ObtenerSucursalActiva", "Home")',
                            type: 'GET',
                            success: function(sucursalID) {
                                if (sucursalID) {
                                    select.val(sucursalID);
                                } else if (response.data.length > 0) {
                                    // Si no hay sucursal guardada, usar la primera
                                    select.val(response.data[0].SucursalID);
                                    cambiarSucursal();
                                }
                            }
                        });
                    } else {
                        select.append('<option value="">Sin sucursales</option>');
                    }
                },
                error: function() {
                    $('#ddlSucursalActiva').html('<option value="">Error al cargar</option>');
                }
            });
        }

        // Función para cambiar la sucursal activa
        function cambiarSucursal() {
            const sucursalID = $('#ddlSucursalActiva').val();
            
            if (!sucursalID) return;
            
            $.ajax({
                url: '@Url.Action("CambiarSucursalActiva", "Home")',
                type: 'POST',
                data: { sucursalID: sucursalID },
                success: function(response) {
                    if (response.success) {
                        toastr.success('Sucursal cambiada correctamente');
                        
                        // Recargar la página si estamos en un módulo que depende de sucursal
                        const modulosDependientes = ['/VentaPOS', '/Producto', '/Inventario', '/Venta', '/Compra'];
                        const rutaActual = window.location.pathname;
                        
                        if (modulosDependientes.some(modulo => rutaActual.includes(modulo))) {
                            setTimeout(function() {
                                location.reload();
                            }, 800);
                        }
                    } else {
                        toastr.error('Error al cambiar sucursal');
                    }
                },
                error: function() {
                    toastr.error('Error de conexión');
                }
            });
        }

        // Función para verificar cambios de precios recientes
        function verificarCambiosPrecios() {
            $.ajax({
                url: '@Url.Action("ObtenerCambiosPreciosRecientes", "Home")',
                type: 'GET',
                success: function(response) {
                    if (response.success && response.data && response.data.length > 0) {
                        // Mostrar notificación con los cambios
                        const cantidad = response.data.length;
                        const mensaje = cantidad === 1 
                            ? '1 producto ha cambiado de precio' 
                            : cantidad + ' productos han cambiado de precio';
                        
                        toastr.warning(mensaje, 'Alerta de Precios', {
                            timeOut: 10000,
                            onclick: function() {
                                mostrarModalCambiosPrecios(response.data);
                            }
                        });
                    }
                }
            });
        }

        // Función para mostrar modal con detalles de cambios de precios
        function mostrarModalCambiosPrecios(cambios) {
            let html = '<div class="table-responsive"><table class="table table-sm table-striped">';
            html += '<thead><tr><th>Producto</th><th>Anterior</th><th>Nuevo</th><th>Fecha</th></tr></thead><tbody>';
            
            $.each(cambios, function(i, cambio) {
                const diferencia = cambio.PrecioNuevo - cambio.PrecioAnterior;
                const icono = diferencia > 0 ? '<i class="fas fa-arrow-up text-danger"></i>' : '<i class="fas fa-arrow-down text-success"></i>';
                
                html += '<tr>';
                html += '<td>' + cambio.NombreProducto + '</td>';
                html += '<td>$' + cambio.PrecioAnterior.toFixed(2) + '</td>';
                html += '<td>' + icono + ' $' + cambio.PrecioNuevo.toFixed(2) + '</td>';
                html += '<td>' + new Date(cambio.FechaCambio).toLocaleString('es-MX') + '</td>';
                html += '</tr>';
            });
            
            html += '</tbody></table></div>';
            
            Swal.fire({
                title: 'Cambios de Precios Recientes',
                html: html,
                width: 700,
                confirmButtonText: 'Entendido'
            });
        }

        // ============================================================
        // Actualizar Badge de Alertas de Inventario
        // ============================================================
        function actualizarBadgeAlertas() {
            @if (PermisoHelper.TienePermiso("ADMINISTRADOR", "EMPLEADO")) {
                <text>
                $.ajax({
                    url: '@Url.Action("ObtenerConteo", "AlertasInventario")',
                    type: 'GET',
                    success: function(response) {
                        if (response.success && response.data && response.data.TOTAL > 0) {
                            $('#menuBadgeAlertas').text(response.data.TOTAL).show();
                            
                            // Mostrar notificación si hay alertas críticas o agotados
                            if (response.data.AGOTADO > 0 || response.data.CRITICO > 0) {
                                const mensaje = response.data.AGOTADO > 0 
                                    ? response.data.AGOTADO + ' producto(s) AGOTADO(S)' 
                                    : response.data.CRITICO + ' producto(s) en nivel CRÍTICO';
                                
                                toastr.error(mensaje, 'Alerta de Inventario', {
                                    timeOut: 15000,
                                    onclick: function() {
                                        window.location.href = '@Url.Action("Index", "AlertasInventario")';
                                    }
                                });
                            }
                        } else {
                            $('#menuBadgeAlertas').hide();
                        }
                    }
                });
                </text>
            }
        }

        // Actualizar badge cada 5 minutos
        @if (PermisoHelper.TienePermiso("ADMINISTRADOR", "EMPLEADO")) {
            <text>
            actualizarBadgeAlertas();
            setInterval(actualizarBadgeAlertas, 300000); // 5 minutos
