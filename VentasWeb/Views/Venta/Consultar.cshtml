
@{
    ViewBag.Title = "Historial de Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Inicio</a></li>
        <li class="breadcrumb-item active" aria-current="page">Historial de Ventas</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <i class="fas fa-file-invoice-dollar"></i> Historial de Ventas
            </div>
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label for="txtFechaInicio" class="col-form-label col-form-label-sm">Fecha Inicio:</label>
                            <input type="date" class="form-control form-control-sm" id="txtFechaInicio" name="FechaInicio">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label for="txtFechaFin" class="col-form-label col-form-label-sm">Fecha Fin:</label>
                            <input type="date" class="form-control form-control-sm" id="txtFechaFin" name="FechaFin">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label for="txtCodigoVenta" class="col-form-label col-form-label-sm">Código Venta:</label>
                            <input type="text" class="form-control form-control-sm" id="txtCodigoVenta" placeholder="UUID parcial">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label for="txtDocumentoCliente" class="col-form-label col-form-label-sm">RFC Cliente:</label>
                            <input type="text" class="form-control form-control-sm" id="txtDocumentoCliente" placeholder="RFC">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label for="txtNombreCliente" class="col-form-label col-form-label-sm">Nombre Cliente:</label>
                            <input type="text" class="form-control form-control-sm" id="txtNombreCliente" placeholder="Razón Social">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label class="col-form-label col-form-label-sm invisible">Buscar</label>
                            <button id="btnBuscar" type="button" class="btn btn-sm btn-primary btn-block">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbVentas" class="table table-striped table-bordered table-hover nowrap compact" style="width:100%">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Acciones</th>
                                    <th>Tipo</th>
                                    <th>Código</th>
                                    <th>Fecha</th>
                                    <th>RFC Cliente</th>
                                    <th>Cliente</th>
                                    <th>Total</th>
                                    <th>Estatus</th>
                                    <th>Pagado</th>
                                    <th>Saldo</th>
                                    <th>Factura</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{

<script src="@Url.Content("~/Scripts/Views/Venta_Consultar.js")" type="text/javascript"></script>
}

