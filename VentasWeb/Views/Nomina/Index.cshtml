@{
    ViewBag.Title = "Nóminas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Gestión de Nóminas</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                        <li class="breadcrumb-item active">Nóminas</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <!-- Botones de acción -->
            <div class="row mb-3">
                <div class="col-md-12">
                    <a href="@Url.Action("Calcular", "Nomina")" class="btn btn-primary">
                        <i class="fas fa-calculator"></i> Calcular Nueva Nómina
                    </a>
                </div>
            </div>

            <!-- Tarjeta principal -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Listado de Nóminas</h3>
                </div>
                <div class="card-body">
                    <!-- Filtros -->
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label>Periodo:</label>
                            <input type="month" id="txtFiltroPeriodo" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label>Estatus:</label>
                            <select id="cboFiltroEstatus" class="form-control">
                                <option value="">Todos</option>
                                <option value="CALCULADA">Calculada</option>
                                <option value="CONTABILIZADA">Contabilizada</option>
                                <option value="PAGADA">Pagada</option>
                                <option value="CANCELADA">Cancelada</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label>&nbsp;</label>
                            <button type="button" id="btnBuscar" class="btn btn-info btn-block">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                        </div>
                    </div>

                    <!-- Tabla de nóminas -->
                    <div class="table-responsive">
                        <table id="tbNominas" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Folio</th>
                                    <th>Periodo</th>
                                    <th>Fecha Pago</th>
                                    <th>Tipo</th>
                                    <th>Empleados</th>
                                    <th>Total Percepciones</th>
                                    <th>Total Deducciones</th>
                                    <th>Neto a Pagar</th>
                                    <th>Estatus</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Modal Acciones -->
<div class="modal fade" id="modalAcciones" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Acciones de Nómina</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="hdnNominaId" />
                <p><strong>Folio:</strong> <span id="spanFolio"></span></p>
                <p><strong>Periodo:</strong> <span id="spanPeriodo"></span></p>
                <p><strong>Estatus:</strong> <span id="spanEstatus"></span></p>
                <hr>
                <div class="btn-group-vertical w-100">
                    <button type="button" class="btn btn-info btn-block mb-2" onclick="verDetalle()">
                        <i class="fas fa-eye"></i> Ver Detalle
                    </button>
                    <button type="button" id="btnContabilizar" class="btn btn-success btn-block mb-2" onclick="contabilizarNomina()">
                        <i class="fas fa-book"></i> Contabilizar (Generar Póliza)
                    </button>
                    <button type="button" id="btnMarcarPagada" class="btn btn-primary btn-block mb-2" onclick="marcarComoPagada()">
                        <i class="fas fa-check"></i> Marcar como Pagada
                    </button>
                    <button type="button" id="btnCancelar" class="btn btn-danger btn-block" onclick="cancelarNomina()">
                        <i class="fas fa-times"></i> Cancelar Nómina
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/Views/Nomina_Index.js"></script>
}
