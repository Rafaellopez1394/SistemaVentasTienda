@{
    ViewBag.Title = "Punto de Venta (POS)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .pos-container { height: calc(100vh - 120px); overflow: hidden; }
    .pos-left { height: 100%; overflow-y: auto; border-right: 2px solid #dee2e6; padding-right: 15px; }
    .pos-right { height: 100%; overflow-y: auto; }
    .producto-item { cursor: pointer; transition: all 0.2s; }
    .producto-item:hover { background-color: #f8f9fa; border-left: 3px solid #007bff; }
    .carrito-item { border-bottom: 1px solid #dee2e6; padding: 10px 0; }
    .carrito-total { background: #f8f9fa; padding: 15px; border-radius: 8px; margin-top: 20px; }
    .cliente-info { background: #e3f2fd; padding: 15px; border-radius: 8px; margin-bottom: 15px; }
    .credito-warning { background: #fff3cd; padding: 10px; border-radius: 5px; border-left: 4px solid #ffc107; }
    .credito-success { background: #d4edda; padding: 10px; border-radius: 5px; border-left: 4px solid #28a745; }
    .btn-finalizar { font-size: 1.2rem; padding: 15px; font-weight: bold; }
    .cantidad-input { width: 60px; text-align: center; }
    .search-result-item { padding: 10px; cursor: pointer; border-bottom: 1px solid #eee; }
    .search-result-item:hover { background: #f8f9fa; }
    
    /* Panel de estado de caja - No flotante */
    .caja-status { 
        margin-bottom: 15px;
        position: relative;
        z-index: 1;
    }
    .caja-cerrada { 
        background: #f8d7da; 
        border-left: 4px solid #dc3545;
    }
    .caja-abierta { 
        background: #d4edda; 
        border-left: 4px solid #28a745;
    }
</style>

<!-- PANEL DE ESTADO DE CAJA (Arriba de todo) -->
<div class="container-fluid mb-3">
    <div class="caja-status">
        <div id="estadoCajaPanel" class="card shadow caja-cerrada">
            <div class="card-body py-2">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0"><i class="fas fa-cash-register"></i> Caja #<span id="cajaNumero">1</span></h6>
                        <small id="cajaEstado" class="text-danger fw-bold">CERRADA</small>
                    </div>
                    <div>
                        <button class="btn btn-sm btn-success" id="btnAbrirCaja" onclick="mostrarModalApertura()">
                            <i class="fas fa-lock-open"></i> Abrir
                        </button>
                        <button class="btn btn-sm btn-danger" id="btnCerrarCaja" onclick="mostrarModalCierre()" style="display:none;">
                            <i class="fas fa-lock"></i> Cerrar
                        </button>
                    </div>
                </div>
                <div id="cajaDetalles" style="display:none;" class="mt-2 pt-2 border-top">
                    <div class="row">
                        <div class="col-md-3">
                            <small class="d-block"><strong>Apertura:</strong> <span id="cajaFechaApertura"></span></small>
                        </div>
                        <div class="col-md-2">
                            <small class="d-block"><strong>Fondo:</strong> $<span id="cajaFondoInicial">0.00</span></small>
                        </div>
                        <div class="col-md-2">
                            <small class="d-block"><strong>Ventas:</strong> <span id="cajaNumVentas">0</span> ($<span id="cajaTotalVentas">0.00</span>)</small>
                        </div>
                        <div class="col-md-2">
                            <small class="d-block text-danger"><strong>Gastos:</strong> $<span id="cajaTotalGastos">0.00</span></small>
                        </div>
                        <div class="col-md-3">
                            <small class="d-block text-primary"><strong>Esperado:</strong> $<span id="cajaSaldoEsperado">0.00</span></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid pos-container">
    <div class="row h-100">
        <!-- PANEL IZQUIERDO: PRODUCTOS Y CARRITO -->
        <div class="col-md-7 pos-left">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-cart"></i> Buscar Productos</h5>
                </div>
                <div class="card-body">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                        <input type="text" class="form-control" id="txtBuscarProducto" placeholder="Buscar por nombre o Código..." autofocus />
                        <button id="btnBuscarProducto" class="btn btn-primary" onclick="window.buscarProducto()">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </div>
                    <small class="text-muted d-block mt-1">
                        Consejo: escanee el código EAN-13 de la balanza Torrey para agregar automáticamente productos por gramaje.
                    </small>
                    <div id="resultadosBusqueda" class="mt-2" style="max-height: 200px; overflow-y: auto;"></div>
                </div>
            </div>

            <!-- CARRITO DE COMPRA -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Carrito de Compra</h5>
                    <button class="btn btn-sm btn-light" onclick="limpiarCarrito()">
                        <i class="fas fa-trash"></i> Limpiar
                    </button>
                </div>
                <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                    <div id="carritoItems">
                        <p class="text-center text-muted">El carrito está vacío</p>
                    </div>
                </div>
            </div>

            <!-- TOTALES -->
            <div class="carrito-total">
                <div class="row">
                    <div class="col-6">
                        <h6>Subtotal:</h6>
                        <h6>IVA:</h6>
                        <h4 class="text-primary fw-bold">TOTAL:</h4>
                    </div>
                    <div class="col-6 text-end">
                        <h6 id="lblSubtotal">$0.00</h6>
                        <h6 id="lblIVA">$0.00</h6>
                        <h4 class="text-primary fw-bold" id="lblTotal">$0.00</h4>
                    </div>
                </div>
            </div>
        </div>

        <!-- PANEL DERECHO: CLIENTE, PAGO Y FACTURACIÓN -->
        <div class="col-md-5 pos-right">
            <!-- CLIENTE -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Cliente</h5>
                </div>
                <div class="card-body">
                    <div class="input-group mb-2">
                        <input type="text" class="form-control" id="txtBuscarCliente" placeholder="Buscar cliente por RFC o nombre..." />
                        <button class="btn btn-info" onclick="buscarCliente()">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                    <div id="resultadosCliente" style="max-height: 150px; overflow-y: auto;"></div>
                    
                    <input type="hidden" id="clienteID" value="00000000-0000-0000-0000-000000000000" />
                    
                    <div id="clienteInfo" class="cliente-info" style="display:none;">
                        <h6 id="clienteNombre" class="mb-1"></h6>
                        <small id="clienteRFC" class="text-muted"></small>
                        <div id="clienteCredito" class="mt-2"></div>
                    </div>
                    
                    <div id="clienteGeneral" class="alert alert-secondary">
                        <i class="fas fa-user-circle"></i> <strong>Cliente General</strong>
                    </div>
                </div>
            </div>

            <!-- TIPO DE VENTA -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="fas fa-cash-register"></i> Tipo de Venta</h5>
                </div>
                <div class="card-body">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="tipoVenta" id="rdContado" value="CONTADO" checked onchange="cambiarTipoVenta()" />
                        <label class="form-check-label" for="rdContado">
                            <i class="fas fa-money-bill-wave"></i> Contado
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="tipoVenta" id="rdCredito" value="CREDITO" onchange="cambiarTipoVenta()" disabled />
                        <label class="form-check-label" for="rdCredito">
                            <i class="fas fa-credit-card"></i> Crédito
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="tipoVenta" id="rdParcial" value="PARCIAL" onchange="cambiarTipoVenta()" disabled />
                        <label class="form-check-label" for="rdParcial">
                            <i class="fas fa-hand-holding-usd"></i> Pago Parcial
                        </label>
                    </div>
                    
                    <!-- Panel para capturar monto pagado (solo visible en PARCIAL) -->
                    <div id="panelMontoParcial" style="display:none;" class="mt-3">
                        <div class="alert alert-warning">
                            <i class="fas fa-info-circle"></i> Se generará una factura con método PPD (Pago en Parcialidades o Diferido)
                        </div>
                        <label class="form-label fw-bold">Total de la venta:</label>
                        <h4 class="text-primary" id="lblTotalVentaParcial">$0.00</h4>
                        
                        <label class="form-label fw-bold mt-2">Monto a pagar ahora:</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text">$</span>
                            <input type="number" class="form-control" id="txtMontoPagado" placeholder="0.00" step="0.01" min="0.01" onkeyup="calcularSaldoPendiente()" />
                        </div>
                        
                        <div class="alert alert-info mt-3" id="panelSaldoPendiente" style="display:none;">
                            <div class="row">
                                <div class="col-6">
                                    <small>Saldo Pendiente:</small>
                                    <h5 class="mb-0 text-danger" id="lblSaldoPendiente">$0.00</h5>
                                </div>
                                <div class="col-6 text-end">
                                    <small>Pagado:</small>
                                    <h5 class="mb-0 text-success" id="lblPorcentajePagado">0%</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-2">
                        <small class="text-muted"><i class="fas fa-info-circle"></i> Las ventas a crédito no pueden facturarse hasta liquidar el saldo</small>
                    </div>
                </div>
            </div>

            <!-- FORMA DE PAGO (Solo para CONTADO) -->
            <div class="card shadow-sm mb-3" id="panelFormaPago">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-wallet"></i> Forma de Pago</h5>
                </div>
                <div class="card-body">
                    <select class="form-select form-select-lg mb-3" id="cboFormaPago" onchange="cambiarFormaPago()">
                        <option value="">Seleccionar forma de pago...</option>
                    </select>

                    <div id="panelEfectivo" style="display:none;">
                        <label class="form-label fw-bold">Total a pagar:</label>
                        <h3 class="text-success" id="lblTotalPagar">$0.00</h3>
                        
                        <label class="form-label fw-bold mt-3">Efectivo recibido:</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text">$</span>
                            <input type="number" class="form-control" id="txtEfectivoRecibido" placeholder="0.00" step="0.01" onkeyup="calcularCambio()" />
                        </div>
                        
                        <div class="alert alert-info mt-3" id="panelCambio" style="display:none;">
                            <h5 class="mb-0">Cambio: <span id="lblCambio" class="fw-bold text-success">$0.00</span></h5>
                        </div>
                    </div>

                    <select class="form-select mt-3" id="cboMetodoPago">
                        <option value="">Método de pago...</option>
                    </select>
                </div>
            </div>

            <!-- FACTURACIÓN -->
            <div class="card shadow-sm mb-3" id="panelFacturacion" style="display:none;">
                <div class="card-header bg-dark text-white">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chkRequiereFactura" onchange="toggleFacturacion()" />
                        <label class="form-check-label fw-bold" for="chkRequiereFactura">
                            <i class="fas fa-file-invoice"></i> Requiere Factura
                        </label>
                    </div>
                </div>
                <div class="card-body" id="datosFacturacion" style="display:none;">
                    <div class="mb-2">
                        <label class="form-label">RFC:</label>
                        <input type="text" class="form-control" id="txtFacturaRFC" readonly />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Uso CFDI:</label>
                        <select class="form-select" id="cboUsoCFDI">
                            <option value="">Seleccionar...</option>
                        </select>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Correo:</label>
                        <input type="email" class="form-control" id="txtCorreoFactura" placeholder="correo@ejemplo.com" />
                    </div>
                </div>
            </div>

            <!-- BOTONES DE ACCIÓN -->
            <div class="d-grid gap-2">
                <button class="btn btn-success btn-finalizar" onclick="finalizarVenta()">
                    <i class="fas fa-check-circle"></i> FINALIZAR VENTA
                </button>
                <button class="btn btn-danger btn-lg" onclick="cancelarVenta()">
                    <i class="fas fa-times-circle"></i> Cancelar Venta
                </button>
            </div>
        </div>
    </div>
</div>

<!-- MODAL: APERTURA DE CAJA -->
<div class="modal fade" id="modalAperturaCaja" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title"><i class="fas fa-lock-open"></i> Apertura de Caja</h5>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Ingrese el monto inicial con el que abre la caja
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Caja:</label>
                    <input type="text" class="form-control" value="Caja Principal" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Fondo Inicial:</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text">$</span>
                        <input type="number" class="form-control" id="txtFondoInicial" placeholder="0.00" step="0.01" min="0" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="procesarApertura()">
                    <i class="fas fa-check"></i> Abrir Caja
                </button>
            </div>
        </div>
    </div>
</div>

<!-- MODAL: CIERRE DE CAJA -->
<div class="modal fade" id="modalCierreCaja" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title"><i class="fas fa-lock"></i> Cierre de Caja</h5>
            </div>
            <div class="modal-body">
                <!-- Resumen del turno -->
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <strong>Resumen del Turno</strong>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <p class="mb-1"><strong>Fondo Inicial:</strong> $<span id="cierreFondoInicial">0.00</span></p>
                                <p class="mb-1"><strong>Total Ventas:</strong> $<span id="cierreTotalVentas">0.00</span></p>
                                <p class="mb-1"><strong>(-) Total Gastos:</strong> <span class="text-danger">$<span id="cierreTotalGastos">0.00</span></span></p>
                            </div>
                            <div class="col-6">
                                <p class="mb-1"><strong>Número Ventas:</strong> <span id="cierreNumVentas">0</span></p>
                                <p class="mb-1"><strong>Monto Esperado:</strong> <span class="text-primary fw-bold">$<span id="cierreMontoEsperado">0.00</span></span></p>
                                <small class="text-muted">(Fondo + Ventas - Gastos)</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Arqueo (conteo real) -->
                <div class="card">
                    <div class="card-header bg-warning">
                        <strong>Arqueo de Caja (Conteo Real)</strong>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Efectivo:</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="txtMontoEfectivo" placeholder="0.00" step="0.01" min="0" onchange="calcularDiferencia()" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tarjeta:</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="txtMontoTarjeta" placeholder="0.00" step="0.01" min="0" onchange="calcularDiferencia()" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Transferencia:</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" class="form-control" id="txtMontoTransferencia" placeholder="0.00" step="0.01" min="0" onchange="calcularDiferencia()" />
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-6">
                                <h6>Monto Real Total:</h6>
                            </div>
                            <div class="col-6 text-end">
                                <h5 class="text-primary">$<span id="cierreMontoReal">0.00</span></h5>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Diferencia -->
                <div class="alert mt-3" id="alertDiferencia" style="display:none;"></div>

                <!-- Observaciones -->
                <div class="mt-3">
                    <label class="form-label">Observaciones:</label>
                    <textarea class="form-control" id="txtObservaciones" rows="2" placeholder="Opcional: notas sobre el cierre..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" onclick="procesarCierre()">
                    <i class="fas fa-lock"></i> Cerrar Caja
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script src="~/Scripts/Views/VentaPOS_Caja.js?v=@DateTime.Now.Ticks"></script>
    <script src="~/Scripts/Views/VentaPOS.js?v=@DateTime.Now.Ticks"></script>
    <script src="~/Scripts/Views/VentaPOS_Gramaje.js?v=@DateTime.Now.Ticks"></script>
}
