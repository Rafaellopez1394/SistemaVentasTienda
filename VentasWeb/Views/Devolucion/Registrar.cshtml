@{
    ViewBag.Title = "Registrar Devolución";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><i class="fas fa-undo"></i> Registrar Devolución</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Devolucion")">Devoluciones</a></li>
                    <li class="breadcrumb-item active">Registrar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Buscar Venta -->
        <div class="card">
            <div class="card-header bg-primary">
                <h3 class="card-title"><i class="fas fa-search"></i> Buscar Venta</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Número de Venta</label>
                            <div class="input-group">
                                <input type="text" id="txtNumeroVenta" class="form-control" placeholder="Ej: V-12345" />
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-primary" onclick="buscarVenta()">
                                        <i class="fas fa-search"></i> Buscar
                                    </button>
                                </div>
                            </div>
                            <small class="form-text text-muted">Ingrese el número de venta completo</small>
                        </div>
                    </div>
                </div>
                
                <!-- Información de la Venta -->
                <div id="infoVenta" style="display:none;">
                    <hr />
                    <h5><i class="fas fa-receipt"></i> Información de la Venta</h5>
                    <div class="row">
                        <div class="col-md-3">
                            <p><strong>Fecha:</strong> <span id="ventaFecha"></span></p>
                        </div>
                        <div class="col-md-3">
                            <p><strong>Cliente:</strong> <span id="ventaCliente"></span></p>
                        </div>
                        <div class="col-md-3">
                            <p><strong>Total:</strong> <span id="ventaTotal"></span></p>
                        </div>
                        <div class="col-md-3">
                            <p><strong>Sucursal:</strong> <span id="ventaSucursal"></span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Productos de la Venta -->
        <div class="card" id="cardProductos" style="display:none;">
            <div class="card-header bg-info">
                <h3 class="card-title"><i class="fas fa-box"></i> Productos a Devolver</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th width="50px">
                                    <input type="checkbox" id="checkTodos" onchange="seleccionarTodos()" />
                                </th>
                                <th>Código</th>
                                <th>Producto</th>
                                <th>Cant. Original</th>
                                <th>Cant. a Devolver</th>
                                <th>Precio</th>
                                <th>SubTotal</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyProductos"></tbody>
                        <tfoot>
                            <tr class="bg-light">
                                <td colspan="6" class="text-right"><strong>Total a Devolver:</strong></td>
                                <td><strong id="totalDevolver">$0.00</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Datos de la Devolución -->
        <div class="card" id="cardDatos" style="display:none;">
            <div class="card-header bg-warning">
                <h3 class="card-title"><i class="fas fa-edit"></i> Datos de la Devolución</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tipo de Devolución <span class="text-danger">*</span></label>
                            <select id="cboTipoDevolucion" class="form-control">
                                <option value="">-- Seleccione --</option>
                                <option value="TOTAL">Total (Todos los productos)</option>
                                <option value="PARCIAL">Parcial (Algunos productos)</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Forma de Reintegro <span class="text-danger">*</span></label>
                            <select id="cboFormaReintegro" class="form-control">
                                <option value="">-- Seleccione --</option>
                                <option value="EFECTIVO">Efectivo (Devolver dinero)</option>
                                <option value="CREDITO_CLIENTE">Crédito a Cliente (Saldo a favor)</option>
                                <option value="CAMBIO_PRODUCTO">Cambio por otro Producto</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Motivo de la Devolución <span class="text-danger">*</span></label>
                            <textarea id="txtMotivo" class="form-control" rows="3" 
                                      placeholder="Describa el motivo de la devolución..."></textarea>
                        </div>
                    </div>
                </div>
                
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> 
                    <strong>Importante:</strong> Los productos devueltos se reintegrarán automáticamente al inventario.
                </div>
                
                <div class="text-right">
                    <button type="button" class="btn btn-secondary" onclick="cancelar()">
                        <i class="fas fa-times"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-success" onclick="registrarDevolucion()">
                        <i class="fas fa-save"></i> Registrar Devolución
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts {
    <script src="~/Scripts/Devolucion/Registrar.js"></script>
}
