@{
    ViewBag.Title = "Catálogo de Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Catálogo de Productos</h4>
        <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#modalProducto" onclick="abrirModal(0)">
            Nuevo Producto
        </button>
    </div>
    <div class="card-body">
        <table id="tbProductos" class="table table-striped table-hover" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Categoría</th>
                    <th>Clave SAT</th>
                    <th>Unidad</th>
                    <th>IVA</th>
                    <th>IEPS</th>
                    <th>Exento</th>
                    <th>Estatus</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- MODAL PRODUCTO -->
<div class="modal fade" id="modalProducto" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalTitulo">Nuevo Producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formProducto">
                    <input type="hidden" id="txtProductoID" />
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label fw-bold">Nombre *</label>
                            <input type="text" class="form-control" id="txtNombre" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Código interno</label>
                            <input type="text" class="form-control" id="txtCodigoInterno" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Categoría *</label>
                            <select class="form-control" id="cboCategoria" required></select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Clave SAT *</label>
                            <select class="form-control" id="cboClaveSAT" required></select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Unidad SAT *</label>
                            <select class="form-control" id="cboUnidadSAT" required></select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Tasa IVA *</label>
                            <select class="form-control" id="cboTasaIVA" required></select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Tasa IEPS</label>
                            <select class="form-control" id="cboTasaIEPS"></select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="chkExento">
                                <label class="form-check-label">Exento</label>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">
                    <h6>Lotes registrados</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered" id="tbLotes">
                            <thead class="thead-light">
                                <tr>
                                    <th>Lote</th>
                                    <th>Entrada</th>
                                    <th>Caducidad</th>
                                    <th>Total</th>
                                    <th>Disponible</th>
                                    <th>Compra</th>
                                    <th>Venta</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr><td colspan="7" class="text-center text-muted">Sin lotes</td></tr>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnGuardarProducto">Guardar Producto</button>
            </div>
        </div>
    </div>
</div>

<!-- MODAL VER LOTES -->
<div class="modal fade" id="modalLotes" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5>Lotes de: <span id="nombreProductoLote"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-right mb-3">
                    <a id="linkCrearLote" href="#" class="btn btn-success btn-sm">Ingresar Nuevo Lote</a>
                </div>
                <table class="table table-bordered">
                    <thead class="thead-success">
                        <tr>
                            <th>Lote</th>
                            <th>Entrada</th>
                            <th>Caducidad</th>
                            <th>Total</th>
                            <th>Disponible</th>
                            <th>Compra</th>
                            <th>Venta</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="modalLotesBody"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- AQUÍ LLAMAS TU ARCHIVO JS EXTERNO LIMPIO -->
    <script src="~/Scripts/Views/Producto.js"></script>
}