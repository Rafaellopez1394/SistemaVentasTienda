@model IEnumerable<CapaModelo.LoteProducto>
@{
    ViewBag.Title = "Lotes del producto: " + ViewBag.Producto;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href="@Url.Action("CrearLote", new { productoId = Model.FirstOrDefault()?.ProductoID })" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nuevo Lote
    </a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Volver a Productos</a>
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Fecha Entrada</th>
            <th>Fecha Caducidad</th>
            <th>Cantidad Total</th>
            <th>Cantidad Disponible</th>
            <th>Precio Compra</th>
            <th>Precio Venta</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lote in Model)
        {
            <tr>
                <td>@lote.FechaEntrada.ToShortDateString()</td>
                <td>@(lote.FechaCaducidad.HasValue ? lote.FechaCaducidad.Value.ToShortDateString() : "-")</td>
                <td>@lote.CantidadTotal</td>
                <td>@lote.CantidadDisponible</td>
                <td>@lote.PrecioCompra.ToString("C")</td>
                <td>@lote.PrecioVenta.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
